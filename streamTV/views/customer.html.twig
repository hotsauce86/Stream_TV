{# item.html.twig
TIM TIERNEY
	This file provides the template for displaying a details for a specific CUSTOMER
	in the database.  It sets up the table style, and then builds the html code
	for the table of information about the toy.
#}

{% include 'header.twig' %}
<style>
table, tr, th, td { border: 0px !important; }
td, th {padding: .4em;}
.id { text-align: center; }
.name { text-align: center; }
.price { text-align: right; }
</style>
{% if results %}
<h1>Details for {{results[0].tname}}</h1>

<table>
<tr>
<td class="attr">custID</td>
<td class="value">${{results[0].custID}}</td>
</tr><tr>
<td class="attr">firstName</td>
<td class="value">{{results[0].fname}}</td>
</tr><tr>
<td class="attr">lastName</td>
<td class="value">{{results[0].lname}}</td>
</tr><tr>
<td class="attr">email</td>
<td class="value">{{results[0].email}}</td>
</tr><tr>
<td class="attr">ccard</td>
<td class="value">{{results[0].ccard}}</td>
</tr><tr>
<td class="attr">joindate</td>
<td class="value">{{results[0].membersince}}</td>
</tr><tr>
<td class="attr">renewdate</td>
<td class="value">{{results[0].renewaldate}}</td>
</tr><tr>
<td class="attr">password</td>
<td class="value">{{results[0].password}}</td>
</tr><tr>
<td class="attr">username</td>
<td class="value">{{results[0].username}}</td>
</tr>

<table>


{% endif %}

